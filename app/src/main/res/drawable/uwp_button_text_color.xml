<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disabled -->
    <item android:state_enabled="false" android:color="#888" />
    <!-- pressed -->
    <item android:state_pressed="true" android:state_enabled="true" android:color="#000000" />
    <!-- focused -->
    <item android:state_focused="false" android:state_enabled="true" android:color="#000000" />
    <!-- default -->
    <item android:color="#000" />
</selector>